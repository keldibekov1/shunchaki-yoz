generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Post {
  id         String   @id @default(uuid())
  postNumber Int      @unique
  name       String?  
  content    String
  createdAt  DateTime @default(now())
  views      Int      @default(0)
  likes      Int      @default(0)
  editToken  String
}

model Admin {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  OWNER
}